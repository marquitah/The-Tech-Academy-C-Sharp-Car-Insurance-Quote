@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Free Car Insurance Quote!</h1>
    <p class="lead">Delightfully easy! Just enter in the required information below.</p>
</div>


<!--input table here-->
<div class="row row-no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h3 class="m-0">Get your free quote now!</h3>
        </div>
        <div class="card body">
            @using (Html.BeginForm("initialSignUp","Quote", FormMethod.Post))//generates form tag with attributes
            {
                <div class="row-no-gutters ">
                    <div class="form-group col-md-12">
                        <p>First Name</p>
                        <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                    </div>
                    <div class="form-group col-md-12">
                        <p>Last Name</p>
                        <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                    </div>
                    <div class="form-group col-md-12">
                        <p>Email Address</p>
                        <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                    </div>
                    <div class="form-group col-md-12">
                        <p>Date of Birth MM/DD/YYYY</p>
                        <input name="DateOfBirth" type="text" class="form-control" placeholder="MM/DD/YYYY" />
                    </div>
                    <div class="form-group col-md-12">
                        <p>Car Year</p>
                        <input name="CarYear" type="text" class="form-control" placeholder="YYYY" />
                    </div>
                    <div class="form-group col-md-12">
                        <p>Car Make</p>
                        <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                    </div>
                    <div class="form-group col-md-12">
                        <p>Car Model</p>
                        <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                    </div>
                    <div class="form-group col-md-12">
                        <p>How many DUIs have you had in the past?</p>
                        <input name="DUI" type="text" class="form-control" placeholder="How many DUIs in the past?" />
                    </div>
                    <div class="form-group col-md-12">
                        <p>How many speeding tickets have you had in the past?</p>
                        <input name="SpeedingTickets" type="text" class="form-control" placeholder="How many speeding tickets?" />
                    </div>
                    <div class="form-group col-md-12">
                        <p>Would you like Full Coverage or just Liability?</p>
                        <input name="Coverage" type="text" class="form-control" placeholder="Full coverage or just liability?" />
                    </div>

                    <button type="submit" class="btn btn-block btn-primary">Get Quote!</button>
                </div>
            }
        </div>
    </div>

</div>
    


